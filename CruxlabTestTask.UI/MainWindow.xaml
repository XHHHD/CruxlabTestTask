<Window x:Class="CruxlabTestTask.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CruxlabTestTask.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="OpenFile_Button" Grid.Column="0" Margin="5" Content="OPEN"
                FontSize="20" FontWeight="Bold" Click="OpenFile_Button_Click"/>
        <StackPanel x:Name="Results_StackPanel" Grid.Column="1" Orientation="Vertical"
                    Margin="5">
            
        </StackPanel>
    </Grid>
</Window>
